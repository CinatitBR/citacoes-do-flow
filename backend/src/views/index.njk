<body>
  <header>
    <div class="wrapper">
      <h1>Citações do Flow</h1>
  
      <h2>
        As melhores citações do seu <br> 
        <span>podcast favorito</span>
      </h2>
    </div>
  </header>

  <section class="quotes" id="quote-list">
    {% for record in records %}
      <div class="quote">
        <img 
          class="quote-img" 
          src="./images/photos/monark.jpg" 
          alt="Nome"
        >

        <div class="quote-body">
          <p>
            {{ record.body }}
          </p>

          <div class="quote-desc">
            <div class="item">- {{ record.title }}</div>
            <div class="item">episódio</div>
          </div>
        </div>
      </div>
    {% endfor %}
